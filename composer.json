{
    "license": "MIT",
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "require": {
        "ext-json": "*",
        "monolog/monolog": "^2.0",
        "php": "^7.2|^8.0",
        "php-di/php-di": "^6.1",
        "slim/csrf": "^1.0",
        "slim/http": "^1.0",
        "slim/psr7": "^1.1",
        "slim/slim": "^4.5",
        "slim/twig-view": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
